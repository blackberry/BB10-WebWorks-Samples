        version="1.0.0" id="Sensors" xml:lang="en">

	<name>Sensors</name>
	<description>Sample Application to show Sensors API</description>
	<author rim:copyright="2012" email="@timothywindsor" href="http://www.blackberry.com/developers">Tim Windsor</author>
	
	<content src="index.html"/>
	<icon src="images/icon.png"/>
	
	<rim:permissions>
